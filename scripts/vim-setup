YCM=~/.vim/bundle/YouCompleteMe

sudo pacman -S python --needed --noconfirm

#######################
## Initialise Vundle ##
#######################
mkdir -p ~/.vim/bundle
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
vim +PluginInstall +qall


#########################
## Setup YouCompleteMe ##
#########################
cd "$YCM"
./install.py --clang-completer
